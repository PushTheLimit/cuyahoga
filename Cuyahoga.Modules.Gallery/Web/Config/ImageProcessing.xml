<?xml version="1.0" encoding="utf-8" ?>
<imageprocessing>
	<thumbnail>
		<autogenerate>false</autogenerate>
		<preserveratio>false</preserveratio>
		<width>80</width>
		<height>80</height>
	</thumbnail>
	<watermark>
		<include>true</include>
		<!-- The text that will be used to watermark the image -->
		<text>&#169; 2006: Gila Paris Art Experience</text>
		<!-- placement of the watermark: possible values:
			top-left | 
			top-right | 
			top-center | 
			bottom-left | 
			bottom-right | 
			bottom-center | 
		-->
		<placement>bottom-center</placement>
		<!-- font familly, size and color -->
		<font-familly>Arial</font-familly>
		<font-size>5</font-size>
		<!-- Can be used to provide a pre-defined image to be placed instead of the text -->
		<image></image>
	</watermark>
</imageprocessing>