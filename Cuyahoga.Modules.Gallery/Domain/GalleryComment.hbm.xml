<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
	<class name="Cuyahoga.Modules.Gallery.Domain.GalleryComment, Cuyahoga.Modules.Gallery" table="cm_gal_gallerycomment">
		<id name="Id" column="commentid" type="Int32" unsaved-value="-1">
			<generator class="native">
				<param name="sequence">cm_gal_gallerycomment_commentid_seq</param>
			</generator>
		</id>
		<timestamp name="DateUpdated" column="updated" />
		<property name="Name" column="name" type="String" length="100" not-null="false" />
		<property name="Culture" column="culture" type="String" length="8" not-null="false" />
		<property name="Website" column="website" type="String" length="100" not-null="false" />
		<property name="CommentText" column="commenttext" type="String" length="2000" />
		<property name="UserIp" column="userip" type="String" length="15" not-null="false" />
		<property name="DateCreated" column="created" type="DateTime" />

		<many-to-one name="Gallery" class="Cuyahoga.Modules.Gallery.Domain.Gallery, Cuyahoga.Modules.Gallery" column="galleryid" cascade="none" />
		<many-to-one name="User" class="Cuyahoga.Core.Domain.User, Cuyahoga.Core" column="userid" cascade="none" />
	</class>
</hibernate-mapping>